# Microsoft Dataverse SDK Configuration

# Dataverse Environment
DATAVERSE_URL=https://yourorg.crm.dynamics.com
DATAVERSE_API_VERSION=v9.2

# Azure AD Authentication
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here
AZURE_TENANT_ID=your-tenant-id-here

# Optional: Authority URL (defaults to https://login.microsoftonline.com/{tenant_id})
# AZURE_AUTHORITY=https://login.microsoftonline.com/your-tenant-id

# Optional: Scope (defaults to {dataverse_url}/.default)
# AZURE_SCOPE=https://yourorg.crm.dynamics.com/.default

# SDK Configuration
# Connection pool settings
MAX_CONNECTIONS=100
MAX_KEEPALIVE_CONNECTIONS=20
KEEPALIVE_EXPIRY=30

# Retry settings
MAX_RETRIES=3
BACKOFF_FACTOR=1.0
RETRY_STATUS_CODES=429,500,502,503,504

# Timeout settings (in seconds)
CONNECT_TIMEOUT=10.0
READ_TIMEOUT=30.0
WRITE_TIMEOUT=10.0
POOL_TIMEOUT=5.0

# Batch settings
DEFAULT_BATCH_SIZE=100
MAX_BATCH_SIZE=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_TELEMETRY=false

# Development/Testing
DEBUG=false
ENABLE_MOCK_MODE=false

